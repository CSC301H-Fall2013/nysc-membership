resources :courses

<table>
  <thead>
    <tr>
      <th>Participantid</th>
      <th>Courseid</th>
      <th>Startdate</th>
      <th>Waitlist status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.participantID %></td>
        <td><%= enrollment.courseID %></td>
        <td><%= enrollment.startDate %></td>
        <td><%= enrollment.waitlist_status %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Listing participants</h1>

<!--this will search through all participants in the database -->
<%= form_tag participants_path, :method => 'get' do %>
  <p>
    <p>Search by First name, Last name, Phone number, or Participant ID</p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>

<% end %> 


<br><hr><br>

<p> Table below for test/database verification: </p>
<table>
  <thead>
    <tr>
      <th>Participantid</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Phone</th>
      <th>Expirydate</th>
      <th>Dr note date</th>
      <th>Password</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Is member</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.participantID %></td>
        <td><%= participant.fname %></td>
        <td><%= participant.lname %></td>
        <td><%= participant.phone %></td>
        <td><%= participant.expirydate %></td>
        <td><%= participant.dr_note_date %></td>
        <td><%= participant.password %></td>
        <td><%= participant.email %></td>
        <td><%= participant.birthday %></td>
        <td><%= participant.is_member %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Participant', new_participant_path %>

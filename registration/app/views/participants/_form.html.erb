<%= form_for(@participant) do |f| %>
  <% if @participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

      <ul>
      <% @participant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :participantID, "Participant ID" %><br>
    <%= f.text_field :participantID %>
  </div>
  <div class="field">
    <%= f.label :fname, "First Name" %><br>
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :lname, "Last Name" %><br>
    <%= f.text_field :lname %>
  </div>
  <div class="field">
    <%= f.label :birthday, "Date of Birth" %><br>
    <%= f.date_select :birthday, start_year: 1900, end_year: Date.current.year, order: [:month, :day, :year] %>
  </div>
  <div class="field">
    <%= f.label :phone, "Phone Number" %><br>
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :password, "Password" %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :email, "Email Address" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    Participant is Not an NYSC Member<br>
    <input type="checkbox" id="checkBox" onclick="noMember()">
  </div>
  <div class="field">
    <%= f.label :expirydate, "Membership Expiry Date" %><br>
    <%= f.date_select :expirydate, start_year: Date.current.year + 1, order: [:month, :day, :year] %>
  </div>
  <div id="hidden" class="field">
    <%= f.date_select :expirydate, start_year: Date.current.year - 1, :disabled => true, :discard_day => true, :discard_month => true, :discard_year => true %>
  </div>
  <div class="field">
    <%= f.label :dr_note_date, "Doctor's Note Date" %><br>
    <%= f.date_select :dr_note_date, start_year: Date.current.year - 2, end_year: Date.current.year, order: [:month, :day, :year], include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :role, "Is Admin User" %><br>
    <%= f.check_box :role, on_value: true, off_value: false %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
